<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/splash_bg_land"
    tools:context="com.tablet.moran.activity.ShutdownSettingActivity">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/back_layout" />

        <LinearLayout
            android:layout_width="520dp"
            android:layout_height="455dp"
            android:layout_gravity="center"
            android:background="@mipmap/menu_bg_transparent_black"
            android:orientation="vertical">

            <TextView
                style="@style/text_common"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginTop="22dp"
                android:text="@string/auto_shut"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/back_5"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="20dp"
                    android:src="@mipmap/back" />

                <TextView
                    android:id="@+id/min_tv5"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:background="@mipmap/menu_item_unselected"
                    android:layout_marginRight="60dp"
                    android:gravity="center"
                    android:text="@string/cancel"
                    android:textColor="@color/black"
                    android:textSize="28sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="35dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/back_15"
                    android:layout_width="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_height="40dp"
                    android:layout_marginRight="20dp"
                    android:src="@mipmap/back" />

                <TextView
                    android:id="@+id/min_tv15"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:background="@mipmap/menu_item_unselected"
                    android:gravity="center"
                    android:layout_marginRight="60dp"
                    android:text="@string/d_minutes"
                    android:textColor="@color/black"
                    android:textSize="22sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="35dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/back_30"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="20dp"
                    android:src="@mipmap/back" />

                <TextView
                    android:id="@+id/min_tv30"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:background="@mipmap/menu_item_unselected"
                    android:layout_marginRight="60dp"
                    android:gravity="center"
                    android:text="@string/c_minutes"
                    android:textColor="@color/black"
                    android:textSize="22sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="35dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/back_60"
                    android:layout_gravity="center_vertical"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="20dp"
                    android:src="@mipmap/back" />

                <TextView
                    android:id="@+id/min_tv60"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="60dp"
                    android:background="@mipmap/menu_item_unselected"
                    android:gravity="center"
                    android:text="@string/e_minutes"
                    android:textColor="@color/black"
                    android:textSize="22sp" />
            </LinearLayout>
        </LinearLayout>

    </FrameLayout>

</android.support.design.widget.CoordinatorLayout>
