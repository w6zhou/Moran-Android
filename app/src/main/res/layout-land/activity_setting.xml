<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_coordinator_layout"
    android:background="@mipmap/splash_bg_land"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tablet.moran.MainActivity">
    <!--中间内容区域-->
    <FrameLayout
        android:id="@+id/fragment_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <LinearLayout
            android:layout_marginTop="36dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/wifi_setting"
                android:drawableLeft="@mipmap/wifi_png"
                android:text="danke"
                android:textSize="27sp"
                android:layout_marginLeft="25dp"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/time_setting"
                android:text="danke"
                android:textSize="27sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

            <TextView
                android:visibility="invisible"
                android:id="@+id/play_setting"
                android:text="画作轮播时间：10分钟"
                android:textSize="27sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/menu_anim"
            android:layout_gravity="right|center_vertical"
            android:background="@drawable/h_menu_anim"
            android:layout_width="440dp"
            android:layout_height="940dp"/>

        <com.tablet.moran.view.CircleMenuView
            android:id="@+id/circle_menu"
            android:orientation="vertical"
            android:layout_gravity="right"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/sys_menu_btn"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:visibility="gone"
                    android:src="@mipmap/back"
                    android:layout_width="@dimen/menu_height"
                    android:layout_height="@dimen/menu_height" />

                <TextView
                    android:text="@string/sys_preference"
                    style="@style/menu_text_common_l"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/orient_menu_btn"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:visibility="gone"
                    android:src="@mipmap/back"
                    android:layout_width="@dimen/menu_height"
                    android:layout_height="@dimen/menu_height" />

                <TextView
                    android:text="@string/rotation_screen"
                    style="@style/menu_text_common_l"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ar_menu_btn"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:visibility="gone"
                    android:src="@mipmap/back"
                    android:layout_width="@dimen/menu_height"
                    android:layout_height="@dimen/menu_height" />

                <TextView
                    android:text="@string/entrance_ar"
                    style="@style/menu_text_common_l"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/light_menu_btn"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:visibility="gone"
                    android:src="@mipmap/back"
                    android:layout_width="@dimen/menu_height"
                    android:layout_height="@dimen/menu_height" />

                <TextView
                    android:text="@string/light_setting"
                    style="@style/menu_text_common_l"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/playtime_menu_btn"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:visibility="gone"
                    android:src="@mipmap/back"
                    android:layout_width="@dimen/menu_height"
                    android:layout_height="@dimen/menu_height" />

                <TextView
                    android:text="@string/play_time"
                    style="@style/menu_text_common_l"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/band_menu_btn"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:visibility="gone"
                    android:src="@mipmap/back"
                    android:layout_width="@dimen/menu_height"
                    android:layout_height="@dimen/menu_height" />

                <TextView
                    android:text="@string/band_device"
                    style="@style/menu_text_common_l"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/download_menu_btn"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:visibility="gone"
                    android:src="@mipmap/back"
                    android:layout_width="@dimen/menu_height"
                    android:layout_height="@dimen/menu_height" />

                <TextView
                    android:text="@string/download"
                    style="@style/menu_text_common_l"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/wifi_menu_btn"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:visibility="gone"
                    android:src="@mipmap/back"
                    android:layout_width="@dimen/menu_height"
                    android:layout_height="@dimen/menu_height" />

                <TextView
                    android:text="@string/wifi_conn"
                    style="@style/menu_text_common_l"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/language_menu_btn"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:visibility="gone"
                    android:src="@mipmap/back"
                    android:layout_width="@dimen/menu_height"
                    android:layout_height="@dimen/menu_height" />

                <TextView
                    android:text="@string/language"
                    style="@style/menu_text_common_l"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <!--<LinearLayout-->
                <!--android:id="@+id/time_menu_btn"-->
                <!--android:orientation="horizontal"-->
                <!--android:gravity="center"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content">-->
                <!--<ImageView-->
                    <!--android:visibility="gone"-->
                    <!--android:src="@mipmap/back"-->
                    <!--android:layout_width="@dimen/menu_height"-->
                    <!--android:layout_height="@dimen/menu_height" />-->

                <!--<TextView-->
                    <!--android:text="时间设置"-->
                    <!--style="@style/menu_text_common_l"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content" />-->
            <!--</LinearLayout>-->

            <LinearLayout
                android:id="@+id/shutdown_menu_btn"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:visibility="gone"
                    android:src="@mipmap/back"
                    android:layout_width="@dimen/menu_height"
                    android:layout_height="@dimen/menu_height" />

                <TextView
                    android:text="@string/auto_shut"
                    style="@style/menu_text_common_l"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </com.tablet.moran.view.CircleMenuView>

    </FrameLayout>

</android.support.design.widget.CoordinatorLayout>