<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tip_dialog_LL"
    android:layout_width="@dimen/dialog_width"
    android:layout_height="@dimen/dialog_height"
    android:layout_gravity="center"
    android:layout_marginBottom="20dp"
    android:background="@mipmap/splash_circle_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tip_msg"
        style="@style/text_common"
        android:layout_width="@dimen/msg_dialog_width"
        android:singleLine="false"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:text="是否删除该画作？" />

    <LinearLayout
        android:id="@+id/yes_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="66dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/select_flag_1"
            android:visibility="invisible"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/back" />

        <TextView
            style="@style/text_common"
            android:layout_width="wrap_content"
            android:layout_marginRight="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:text="是" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/no_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/select_flag_2"
            android:layout_width="40dp"
            android:visibility="invisible"
            android:layout_height="40dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/back" />

        <TextView
            style="@style/text_common"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="25dp"
            android:text="否" />
    </LinearLayout>
</LinearLayout>