<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/splash_bg_land"
    tools:context="com.tablet.moran.activity.SetPadNameActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="800dp"
            android:layout_height="400dp"
            android:layout_gravity="center"
            android:background="@mipmap/transparent_black_corner"
            android:orientation="vertical"
            android:paddingBottom="50dp"
            android:paddingLeft="100dp"
            android:paddingRight="100dp"
            android:paddingTop="50dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="设置本机名称"
                android:textColor="@color/white"
                android:textSize="47sp" />

            <EditText
                android:id="@+id/text_name"
                android:singleLine="true"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="100dp"
                android:background="@null"
                android:maxLength="20"
                android:paddingBottom="18dp"
                android:textColor="@color/white"
                android:textSize="32sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/divider_light" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="70dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/back_later"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="15dp"
                    android:src="@mipmap/back"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/later_btn"
                    android:layout_width="300dp"
                    android:layout_height="80dp"
                    android:background="@drawable/run_corner_bg_white_big"
                    android:gravity="center"
                    android:text="暂不设置"
                    android:textColor="@color/black"
                    android:textSize="37sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/back_finish"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="15dp"
                    android:src="@mipmap/back"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/finish_btn"
                    android:layout_width="300dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/run_corner_bg_white_big"
                    android:gravity="center"
                    android:text="完成"
                    android:textColor="@color/black"
                    android:textSize="37sp" />
            </LinearLayout>

        </LinearLayout>
    </FrameLayout>

</android.support.constraint.ConstraintLayout>
