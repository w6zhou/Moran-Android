<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@mipmap/splash_bg_land"
    android:layout_height="match_parent"
    tools:context="com.tablet.moran.activity.ResetAppActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include layout="@layout/back_layout"/>

        <LinearLayout

            android:id="@+id/tip_dialog_LL"
            android:layout_width="@dimen/dialog_width"
            android:layout_height="@dimen/dialog_height"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:background="@mipmap/splash_circle_bg"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/msg_tv"
                style="@style/text_common"
                android:layout_width="wrap_content"
                android:singleLine="false"
                android:layout_height="wrap_content"
                android:layout_marginTop="250dp"
                android:text="@string/download_qr_code" />


            <LinearLayout
                android:id="@+id/yes_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="66dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/barcode_iv"
                    android:src="@mipmap/recyclerview_item"
                    android:scaleType="centerCrop"
                    android:layout_width="230dp"
                    android:layout_height="230dp" />

            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</android.support.constraint.ConstraintLayout>
