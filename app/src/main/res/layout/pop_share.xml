<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:background="@color/light_gray"
        android:layout_width="match_parent"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_height="120dp">

        <LinearLayout
            android:id="@+id/wx_share"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_height="match_parent">
            <ImageView
                android:layout_gravity="center"
                android:src="@mipmap/wx_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="微信"
                android:layout_marginTop="10dp"
                style="@style/text_common"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/circle_share"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_height="match_parent">
            <ImageView
                android:layout_gravity="center"
                android:src="@mipmap/circle_wx_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="朋友圈"
                android:layout_marginTop="10dp"
                style="@style/text_common"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/sina_share"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_height="match_parent">
            <ImageView
                android:layout_gravity="center"
                android:src="@mipmap/sina_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="微博"
                android:layout_marginTop="10dp"
                style="@style/text_common"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/cancel_share"
        android:text="取消"
        android:background="@color/white"
        style="@style/text_common_grey"
        android:textColor="@color/bg_gray_light"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

</LinearLayout>